+    if (rc != 1) {
+        ipc_client_log(client, "Failed to send R to quit z-protocol");
+        return -1;
+    }
+    ipc_client_log(client, "Sent R to quit z-protocol");
+
+    /* Receive/send protrom */
+    for (i = 0; i < 4; i++) {
