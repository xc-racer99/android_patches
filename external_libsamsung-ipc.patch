+int load_modem_onedram(struct ipc_client *client, int onedram_fd)
+{
+    void *onedram_addr = NULL;
+    int modem_fd = -1;
+    int rc;
+    int i;
+    unsigned int onedram_init;
+    unsigned int onedram_magic;
+    unsigned int onedram_deinit;
+    struct timeval timeout;
