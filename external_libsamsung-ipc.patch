+
+        if (i++ > 50) {
+            ipc_client_log(client, "Reading onedram init failed");
+            rc = -3;
+            goto error;
+        }
+    } while (onedram_init != GALAXYS4G_ONEDRAM_INIT);
+    ipc_client_log(client, "Read onedram init (0x%x)", onedram_init);
+
+    /* Open modem.bin */
+    modem_fd = open(GALAXYS4G_MODEM_IMAGE_DEVICE, O_RDONLY);
