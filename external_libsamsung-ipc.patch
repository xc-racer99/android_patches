+    } while (onedram_deinit != GALAXYS4G_ONEDRAM_DEINIT);
+    ipc_client_log(client, "Read onedram deinit (0x%x)", onedram_deinit);
+    
+    rc = 0;
+    
+error:
+    if (modem_fd >= 0)
+        close(modem_fd);
+
+    if (onedram_addr != NULL)
+        munmap(onedram_addr, GALAXYS4G_ONEDRAM_MEMORY_SIZE);
+    
+    return rc;
+}
