+        if (rc) {
+            ipc_client_log(client, "Failed to receive protrom, %d", rc);
+            return -1;
+        }
+
+        rc = m5730_send_protrom(serial_fd, i);
+        if (rc < 0) {
+            ipc_client_log(client, "Failed to send protrom #%d", i);
+            return -1;
+        }
+
+        usleep(50000);
+        ipc_client_log(client, "Sent protrom #%d", i);
+    }
+
+    return 0;
